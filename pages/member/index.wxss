@import "../common/authorization.wxss";

.userinfo-section {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.userinfo-head-img {
  width: 200rpx;
}
.userinfo-head-img image{
  width: 100%;
  height: 200rpx;
  border-radius: 50%;
}

.userinfo-info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 70%;
}
.userinfo-info text{
  padding-left: 20rpx;
}

.active-section {
  display: flex;
  /* flex-direction: row;  item 排列方向 
  flex-wrap:wrap;一条轴线排不下，如何换行 */
  flex-flow:row wrap;
  justify-content:flex-start;
  align-content:space-around;
  padding: 0;
  height: 300rpx;
}

.activity {
  width: 25%;
  padding-top: 50rpx;
  text-align: center;
  background-color: #f0f0f0;
}

.activity image {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  margin-top: 25rpx;
  border-radius: 50%;
}

.activity label {
  display: block;
  line-height: 50rpx;
  font-size: 25rpx;
}
